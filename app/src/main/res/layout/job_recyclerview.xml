<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_gap"
    android:layout_marginTop="@dimen/default_gap"
    android:layout_marginBottom="@dimen/default_gap"
    android:layout_marginEnd="@dimen/default_gap"
    android:layout_marginStart="@dimen/default_gap"
    android:animateLayoutChanges="false"
    android:animationCache="true"
    android:background="@drawable/border"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/titlejob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Jobe Title"
        android:textColor="@android:color/holo_green_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/typejob"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titlejob"
        android:text="job Type" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlejob"
        android:layout_toEndOf="@+id/typejob"
        android:text="gender" />

    <TextView
        android:id="@+id/edu"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/typejob"
        android:text="Education" />

    <TextView
        android:id="@+id/age"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typejob"
        android:layout_marginStart="-3dp"
        android:layout_toEndOf="@+id/typejob"
        android:text="age" />

    <TextView
        android:id="@+id/levelcareer"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edu"
        android:text="Caeeer Level" />

    <TextView
        android:id="@+id/date"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edu"
        android:layout_marginStart="-7dp"
        android:layout_toEndOf="@+id/edu"
        android:text="date" />

    <Button
        android:id="@+id/application"
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/levelcareer"
        android:layout_marginStart="19dp"
        android:background="@drawable/border"
        android:text="Application" />

    <Button
        android:id="@+id/delete"
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:layout_below="@+id/levelcareer"
        android:layout_toEndOf="@+id/levelcareer"
        android:background="@drawable/border"
        android:text="Remove Job" />


</RelativeLayout>